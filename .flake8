[flake8]
max-line-length = 100
extend-ignore = E203, E501, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .eggs,
    *.egg,
    .venv,
    venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    htmlcov,
    docs/_build,
per-file-ignores =
    __init__.py:F401,F403
    conftest.py:F401
max-complexity = 10
